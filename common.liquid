// For making it Dynamic for each collection and product, you need to use metafields, options are available

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>

<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
    <style>     

.review-inner{
    display: flex;
    justify-content: center;
    align-items: center;
        }

       .img-cards {
        width:100%;
        padding:20px;
      }

      .img-cards img {
        width:100%;
      }
      
      .review-main-heading{
        margin-bottom:45px;
      }

      
      .reviews-link{
        text-align: center;
    font-family: Lato;
    font-style: normal;
    font-weight: 700;
    font-size: 16px;
    line-height: 140%;
    width: 100%;
    display: block;
    color: #18191b;
    margin-top: 42px;
      }

      .text-main-div{
    position: absolute;
    bottom: 20%;
    padding: 30px;
      }

        .text-main-div h3{
    color:white;
      }

        .text-main-div p{
    color:white;
      }

      </style>

      <div class="review-main section-{{ section.id }}-padding">

        <h2 class="title center review-main-heading">{{ section.settings.review-heading }}</h2>
        <div class="review-inner page-width">
{% for block in section.blocks %} 
          <div class="img-cards">
              <img src ="{{ block.settings.main-image | img_url:"1200x" }}" />
            <div class="text-main-div">
<h3> {{ block.settings.main-text }} </h3>
 <p> {{ block.settings.para-text }} </p>
 <a href="{{ block.settings.button_link }}"> <button> {{ block.settings.button-text }} </button> </a>
              </div>
            
          </div>
{% endfor %}

        </div>
        
      </div>
      
    {% schema %}
{
  "name": "Common Cards",
  "class": "section",
  "settings": [

     {
      "type": "text",
      "id": "review-heading",
      "default": "Main Heading",
      "label": "Common Heading"
    },
        {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Cards",
      "settings": [
      {
      "type": "image_picker",
      "id": "main-image",
        "label": "Main Image"
    },
             {
      "type": "text",
      "id": "main-text",
      "default": "Heading",
      "label": "Heading"
    },
           {
      "type": "text",
      "id": "para-text",
      "default": "Para",
      "label": "Paragraph"
    },
        {
      "type": "text",
      "id": "button-text",
      "default": "Shop Now",
      "label": "Button Text"
    },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Url"
        }
        
      ]
    }
  ],
  "presets": [
    {
      "name": "Common Cards"
    }
  ]
}

 {% endschema %}

 <script>
   

 $(document).ready(function(){
  var sliderItems = $('.review-inner').children().length; 

   console.log(sliderItems)
  
  if(sliderItems > 3){
   $('.review-inner').slick({
  infinite: true,
  speed: 300,
  slidesToShow: 3,
  slidesToScroll: 1,
  prevArrow: false,
  nextArrow: false,
   centerMode: true,
   centerPadding: '30px',
  responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
  ]
});
  }
});

 </script>
